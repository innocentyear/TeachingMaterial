<!-- 指定评审人员的模态框 -->
<div class="modal fade" id="subscriptionBookModal" tabindex="-1" role="dialog" aria-labelledby="subscriptionBookModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:1500px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="subscriptionBookModalLabel">正在加载</h4>
            </div>
            <div class="modal-body" id="subscriptionBookModalPreview">

                @*未使用表单直接提交*@
                @using (Html.BeginForm("SuscriptionBooks", "BookSubscription", FormMethod.Post, htmlAttributes: new { id = "specifyAministratorForm" }))
                {
                    @Html.AntiForgeryToken();


                    <div class="form-horizontal">

                        <div class="form-group">
                           @* <label for="bookID" class="control-label col-md-2">选择部门</label>*@
                            <div class="col-md-4">
                                <input type="text" id="bookSearchString" class="form-control" placeholder="请输入需要查找的教材名称、ISBN号或主编姓名" style="min-width:480px" />
                               @*<select id="bookID" class="form-control">
                                    <option value="">全部部门</option>
                                </select>*@ 
                            </div>
                            <div class="col-md-1">
                                <button type="button" class="btn btn-primary" id="searchBook-btn">查找</button>
                            </div>
                        </div>


                        <div class="form-group">
                           @*<label for="leftExperts" class="control-label col-md-2">选择征订人员</label>*@
                            <div class="col-md-5">
                                <select id="leftExperts" multiple class="form-control" size="25" style="overflow:auto;min-width:600px" ></select>
                                @* @Html.ListBox("leftExperts",null, new { @class = "form-control", size = "10", id = "lb_Origin" })*@
                            </div>
                            <div class="col-md-1">
                                <button id="btn_addItems" class="btn btn-primary btn-block" type="button"><span class="glyphicon glyphicon-chevron-right"></span></button>
                                <br />
                                <br />
                                <br />
                                <button id="btn_subItems" class="btn btn-primary btn-block" type="button"><span class="glyphicon glyphicon-chevron-left"></span></button>

                            </div>
                            <div class="col-md-5">
                                @*@Html.ListBox("rightExperts", ViewBag.RightReviewIndexItems as MultiSelectList, new { @class = "form-control", size = "10", id = "lb_Result" })*@
                                <select id="rightExperts" multiple class="form-control" size="25" style="overflow:auto;min-width:600px" ></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="bookSubscriptionNumber" class="control-label col-md-2" id="bookSubscriptionNumberLabel"></label>
                            <div class="col-md-10" id="inputNumber">
                                <input type="number" name="BookSubscriptionNumber" class="form-control" id="bookSubscriptionNumber" readonly="readonly"  min="1" max="10" />
                                <span class="help-block text-danger" id="bookSubscriptionToolip">正在加载</span>
                            </div>
                          
                        </div>

                    </div>
                    

                }


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">
                    关闭
                </button>
                <button type="button" class="btn btn-success" id="specifiedExperts-btn">确认征订教材名称和数量</button>

            </div>

        </div>
    </div>

</div>
